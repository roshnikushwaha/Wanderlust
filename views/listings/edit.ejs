<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Edit your listing</h3>
    <form method="post" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
      
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" 
            name="listing[title]" 
            value="<%= listing.title %>" 
            class="form-control"
            required>
            <div class="valid-feedback">Title looks good!</div>
            <div class="invalid-feedback">Title must be requried</div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="listing[description]" class="form-control" required><%= listing.description %>></textarea>
             <div class="valid-feedback">Description looks good!</div>
             <div class="invalid-feedback">Description must be requried</div>
        </div>

        <div class="mb-3">
            Original Listing Image <br>
          <img src="<%= originalUrl %>">
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Upload new Image</label>
            <input type="file" name="listing[image]"  class="form-control">
            <div class="valid-feedback">Image looks good!</div>
            <div class="invalid-feedback">Image must be requried</div>
        </div>
        
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]"value="<%= listing.price %>" class="form-control" required>
            <div class="valid-feedback">Price looks good!</div>
            <div class="invalid-feedback">Price must be requried</div>
        </div>
       
        <div class="mb-3 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
            <div class="valid-feedback">Location looks good!</div>
            <div class="invalid-feedback">Location must be requried</div>
        </div>
    </div>
        
       <div class="mb-3">
        <label for="country" class="form-label">Country</label>
           <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
           <div class="valid-feedback">Country looks good!</div>
           <div class="invalid-feedback">Country must be requried</div>
       </div>
        <button class="btn btn-dark mb-3 edit-btn">Edit</button>
    </div>
    </div>
   </form>

</body>
